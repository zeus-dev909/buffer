{
	"name": "Buffer for Chrome",
	"version": "2.1",
	"description": "Easily add great articles, pictures and videos to your Buffer and we automagically share them for you through the day!",
	"browser_action": {
		"default_icon": "logo_icon_small.png"
	},
	"background_page": "buffer.html",
	"permissions": [
		"tabs", "http://*/*", "contextMenus"
	],
	"content_scripts": [
	    {
    	  "matches": ["http://*/*", "https://*/*"],
    	  "css": ["data/image/buffer-image.css"],
    	  "js": ["data/chrome/buffer-chrome-port-wrapper.js", "data/chrome/buffer-chrome-embed.js", "data/libs/jquery-1.7.2.min.js", "data/libs/postmessage.js", "data/buffer-overlay.js", "data/embeds/buffer-hotkey.js", "data/image/buffer-image.js", "data/chrome/buffer-chrome.js"]
    	},
    	{
        "matches": ["https://*.facebook.com/*"],
    	  "js": ["data/embeds/buffer-facebook.js"]
    	},
    	{
      	  "matches": ["http://*.twitter.com/*", "https://*.twitter.com/*"],
    	  "js": ["data/embeds/buffer-twitter.js"]
    	},
    	{
        "matches": ["http://*.google.com/reader/*", "https://*.google.com/reader/*"],
    	  "js": ["data/embeds/buffer-google-reader.js"]
    	},
    	{
          "matches": ["http://*.ycombinator.org/*", "http://*.ycombinator.com/*"],
      	  "js": ["data/embeds/buffer-hn.js"]
      	},
      	{
          "matches": ["http://*.reddit.com/*"],
      	  "js": ["data/embeds/buffer-reddit.js"]
      	}
  	],
	"icons": {
		"16": "logo_icon_small.png",
		"48": "logo_icon_large.png",
		"128": "logo_icon_128.png"
	}
}